{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}

	{% if error %}
		<div class="alert alert-bg-danger">
			{{error.messageKey | trans(error.messagedata, 'security')}}
		</div>
	{% endif %}

	<form id="#form-connect" action="{{ path('login') }}" method="post">
		<div class="form-group">
			<label for="username">Email de connexion</label>
			<input type="text" id="username" name="_username" class="form-control" value="{{ last_email }}"/>
		</div>
		<div class="form-group">
			<label for="password">Mot de passe</label>
			<input type="password" id="password" name="_password" class="form-control"/>
		</div>
		<button class="btn btn-outline-white" type="submit">Se connecter</button>
	</form>

{% endblock %}
